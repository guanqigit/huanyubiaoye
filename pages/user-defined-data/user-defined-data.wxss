page {
  background-color: rgb(245, 247, 250);
}

.defined-box {
  width: 690rpx;
  background-color: #fff;
  padding: 30rpx 0;
  margin: 30rpx auto 0;
}

picker {
  width: 100%;
  height: 100%;
  line-height: 65rpx;
  text-align: left;
}

.dian-icon {
  width: 9rpx;
  height: 9rpx;
  background: #0bb3cc;
  border-radius: 50%;
  margin-left: 16rpx;
  margin-right: 8rpx;
  color: #666;
  font-size: 27rpx;
}

.defined-title {
  color: #222;
  margin-right: 8rpx;
}

.defined-td {
  width: 266rpx;
  text-align: center;
}

.defined-mian {
  margin-top: 40rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.defined-unit {
  height: 80rpx;
  color: #888;
  margin-top: 20rpx;
}

.defined-name {
  width: 70rpx;
  text-align: center;
}

.select-box {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #969696;
  border-radius: 4rpx;
  color: #444;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.daosanjia-icon {
  width: 12rpx;
  height: 6rpx;
}

.defined-btn {
  width: 630rpx;
  height: 64rpx;
  background-color: #26c8e0;
  box-shadow: 0px 2rpx 7rpx 0px rgba(11, 179, 204, 0.38);
  border-radius: 4rpx;
  color: #fff;
  line-height: 64rpx;
  text-align: center;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
