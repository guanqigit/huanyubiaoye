page {
  background: #f5f7fa;
}

.swiperbox {
  padding: 20rpx 30rpx;
}

.swiper {
  width: 100%;
  height: 350rpx;
  border-radius: 5px;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.swiper .wx-swiper-dot {
  margin-bottom: 30rpx;
}

.line-box {
  padding: 10rpx 40rpx;
  position: relative;
}

.spot {
  margin-left: -15rpx;
  width: 8rpx;
  height: 8rpx;
  margin-right: 7rpx;
}

.line {
  margin-bottom: 20rpx;
}

.lines {
  margin-bottom: 40rpx;
  font-size: 23rpx;
  color: #666;
}

.starsimg {
  width: 36rpx;
  height: 33rpx;
  margin-right: 5rpx;
}

.title {
  font-size: 30rpx;
  color: #222;
}

.recommend {
  margin-left: 60rpx;
  font-size: 25rpx;
}

.info {
  font-size: 23rpx;
  color: #26c8df;
}

.framesizeimg {
  width: 341rpx;
  height: 251rpx;
  box-shadow: 3px 3px 5px 0px rgba(8, 1, 3, 0.15);
  margin-left: 25rpx;
}

.name {
  font-size: 25rpx;
  color: #222;
  margin-left: 5rpx;
}

.grey {
  font-size: 23rpx;
  color: #999;
}

.radio {
  transform: scale(0.8);
  margin-top: -5rpx;
}

.footer {
  font-size: 24rpx;
  color: #222;
}

.phone_personal {
  padding: 8rpx 50rpx 8rpx 20rpx;
  background-color: #fff;
  border-radius: 5px;
  border: solid 1px #666;
  font-size: 24rpx;
  color: #222;
}

.phone_one {
  display: flex;
  position: relative;
  justify-content: space-between;
  background-color: rgb(239, 239, 239);
  margin: 0 auto;
  border-radius: 10rpx;
  border-bottom: 2rpx solid rgb(255, 255, 255);
}

.person_box {
  position: relative;
  top: 35rpx;
  left: -180rpx;
}

.phone_select {
  margin-top: 0;
  z-index: 100;
  position: absolute;
}

.select_one {
  text-align: center;
  background-color: #fff;
  width: 157rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 5%;
}

.personal_image {
  z-index: 100;
  position: absolute;
  right: 2.5%;
  width: 12rpx;
  height: 8rpx;
  margin: 28rpx 20rpx 40rpx 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.rotateRight {
  transform: rotate(180deg);
}

.infobox {
  border: solid 1px #26c8df;
  padding: 4rpx 20rpx;
  border-radius: 3px;
}

.submit {
  width: 90%;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #fff;
  background: #26c8e0;
  margin: 0 auto 30rpx;
  box-shadow: 0px 2px 7px 0px rgba(11, 179, 204, 0.38);
  border-radius: 2px;
}
.searchhistory{
  margin:0 30rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #222;
}