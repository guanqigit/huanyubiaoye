.container {
  background: #f5f7fa;
  position: relative;
}

.header {
  padding: 30rpx;
  background: #fff;
}

.swiperbox {
  width: 73rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #222;
  position: relative;
  line-height: 64rpx;
  padding: 0 13rpx;
  background: #eee;
  border-radius: 2px;
  overflow: hidden;
}

.swiperbox:before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: transparent;
  z-index: 1;
}

.searchbtn {
  width: 12rpx;
  height: 6rpx;
  position: absolute;
  top: 22rpx;
  right: 12rpx;
  z-index: 2;
}

.bottombtn {
  top: 36rpx;
  right: 12rpx;
}

.swiper {
  width: 100%;
  height: 100%;
}

.line {
  padding: 0 3%;
  height: 78rpx;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0px 5px 18px 0px rgba(186, 186, 186, 0.38);
}

.search {
  width: 29rpx;
  height: 29rpx;
  margin-right: 13rpx;
  margin-left: 20rpx;
}

.searchinput {
  height: 100%;
}

.serachsub {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.row {
  margin-bottom: 30rpx;
}

.row20 {
  margin-bottom: 30rpx;
}

.title {
  font-size: 30rpx;
  color: #222;
}

.searchlist {
  padding: 17rpx 20rpx;
  font-size: 26rpx;
  color: #222;
  margin-right: 22rpx;
  background: #f2f4f7;
  margin-bottom: 22rpx;
}

.txtdescribe {
  padding: 20rpx 30rpx 0;
  margin-top: 14rpx;
}

.righticon {
  width: 9rpx;
  height: 16rpx;
  margin-left: 8rpx;
}

.egimg {
  width: 210rpx;
  height: 230rpx;
  margin-top: -50px;
}

.homeicon {
  width: 26rpx;
  height: 23rpx;
  margin-right: 8rpx;
}

.design {
  border-radius: 2px;
  border: solid 1px #0bb3cc;
  color: #0bb3cc;
  font-size: 22rpx;
  margin-right: 5rpx;
  padding: 0 10rpx;
}

.describecontent {
  font-size: 22rpx;
  color: #222;
}

.spot {
  width: 8rpx;
  height: 8rpx;
  margin-right: 7rpx;
}

.listbox {
  padding: 0 2% 40rpx 4%;
}

.list-item {
  background: #fff;
  position: relative;
  width: 48%;
  margin-right: 2%;
  margin-top: 25rpx;
  padding-bottom: 20rpx;
}
.line-padding{
  padding: 0 15rpx;
}
.newicon {
  position: absolute;
  top: 0;
  left: 0;
  width: 70rpx;
  height: 70rpx;
}

.list-img {
  width: 100%;
  height: 282rpx;
  margin-bottom: 20rpx;
}

.vouchericon {
  width: 64rpx;
  height: 35rpx;
}

.gotop {
  position: fixed;
  bottom: 50rpx;
  right: 40rpx;
  width: 60rpx;
